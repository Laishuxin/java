<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goods">
    <select id="selectAll" resultType="com.demo.mybatis.entity.Goods">
        select *
        from t_goods
        order by goods_id desc limit 10
    </select>

    <select id="selectById" parameterType="Integer" resultType="com.demo.mybatis.entity.Goods">
        select *
        from t_goods
        where goods_id = #{value}
    </select>

    <select id="selectByPriceInterval" parameterType="java.util.Map" resultType="com.demo.mybatis.entity.Goods">
        SELECT *
        FROM t_goods
        WHERE current_price
                  BETWEEN ${min} AND ${max}
        ORDER BY current_price LIMIT 0, ${limit};
    </select>
</mapper>